<p>
  <strong>Name:</strong>
  <%= mobile_app.name %>
</p>

<p>
  <strong>Short Description:</strong>
  <%= mobile_app.short_description %>
</p>

<p>
  <strong>Long Description:</strong>
  <%= mobile_app.long_description %>
</p>

<p>
  <strong>Icon URL:</strong>
  <% if mobile_app.icon_url %>
  <%= link_to mobile_app.icon_url, mobile_app.icon_url %>
  <% end %>
</p>
<p>
  <strong>Language:</strong>
  <%= mobile_app.language %>
</p>
<p>
  <strong>Agencies:</strong>
  <%= mobile_app.agencies.map(&:name).join(", ") %>
</p>
<p>
  <strong>Tags:</strong>
  <%= mobile_app.official_tags.map(&:tag_text).join(", ") %>
</p>
<p>
  <strong>Status:</strong>
  <%= mobile_app.status.humanize %>
</p>
<p>
  <strong>Certified at:</strong>
  <% validated_string = mobile_app.validated_at ? mobile_app.validated_at.strftime("%B %e, %Y %H:%M %Z") : "Not yet certified" %>
  <%= validated_string %>
<p>
<p><strong>Platform Details</strong></p>
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% random = rand(10000000) %>
  <% mobile_app.mobile_app_versions.each_with_index do |mav,index| %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= "#{random}#{index}" %>" aria-expanded="false" aria-controls="collapseOne">
          Platform <%= index + 1 %>
        </a>
      </h4>
    </div>
    <div id="collapse<%= "#{random}#{index}" %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <strong>Store URL:</strong> <%= link_to mav.store_url, mav.store_url, :target => "_blank" %> </br>
        <strong>Device:</strong> <%= mav.device %> </br>
        <strong>Platform:</strong> <%= mav.platform %> </br>
        <strong>Version Number:</strong> <%= mav.version_number %> </br>
        <!-- <strong>Description:</strong> <%= mav.description %></br> -->
        <!-- <strong>What's new:</strong> <%= mav.whats_new %></br> -->
        <strong>Screenshot:</strong> <%= mav.screenshot %></br>
        <strong>Publish Date:</strong> <%= mav.publish_date.strftime("%B %e, %Y %H:%M %Z") if mav.publish_date %> </br>
        <!-- <strong>Language:</strong> <%= mav.language %> </br> -->
        <strong>Average Rating:</strong> <%= mav.average_rating %> </br>
        <strong>Number of Ratings:</strong> <%= mav.number_of_ratings %>
      </div>
    </div>
  </div>
  <% end %>
</div>
